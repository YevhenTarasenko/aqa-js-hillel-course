{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "target": "es2021",
        "lib": ["es2021", "dom", "dom.iterable"],
        "allowJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "incremental": true
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts"]
}
